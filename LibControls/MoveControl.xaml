<UserControl x:Class="LibControls.MoveControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibControls"
             mc:Ignorable="d" x:Name="btnMoveControls">
    <Grid>
        <WrapPanel>
            <Button x:Name="btnPrev" Width="113" Click="btnPrev_Click">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Prev"/>
                    <Label Content="1"/>
                </StackPanel>
            </Button>
            <Button x:Name="btnNext" Width="115" Click="btnNext_Click">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Next"/>
                    <Label Content="2"/>
                </StackPanel>
            </Button>
        </WrapPanel>
    </Grid>
</UserControl>
